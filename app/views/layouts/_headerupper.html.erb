<div class="header-upper-inner container">
  <div class="row">
    <div class="col-xs-8 col-xs-push-4">
      <!--Show/hide trigger for #hidden-header -->
      <div id="header-hidden-link">
        <a href="#" title="Mais Informações" class="show-hide" data-toggle="show-hide" data-target=".header-hidden" data-callback="searchFormFocus"><i></i>Open</a>
      </div>
      <!--social media icons-->
      <div class="social-media">
        <!--@todo: replace with company social media details-->
        <!-- <a href="#"> <i class="fa fa-twitter-square"></i> </a> -->
        <a href="https://www.facebook.com/campinapolispontocom/"> <i class="fa fa-facebook-square"></i> </a>
        <!-- <a href="#"> <i class="fa fa-linkedin-square"></i> </a> -->
        <!-- <a href="#"> <i class="fa fa-google-plus-square"></i> </a> -->
      </div>
    </div>
    <div class="col-xs-4 col-xs-pull-8">
      <!--user menu-->
      <div class="btn-group user-menu">
        <a href="#login-modal" class="btn btn-link login-mobile">
          <i class="fa fa-user"></i>
        </a>
        <!-- <a href="#signup-modal" class="btn btn-link signup" data-toggle="modal">Quero Meu Site</a> -->
      <% if not current_admin_usuario.nil? %>
        <a href="<%= "/site/admin" %>" class="btn btn-link login">Painel de controle</a>
      <% else %>
        <a href="#login-modal" class="btn btn-link login" data-toggle="modal">Painel de controle</a>
      <% end %>

      <% if not current_admin_usuario.nil? then %>
        <% if not current_admin_usuario.admin_cliente_id.nil? then %>
          <% empresa = Admin::Cliente.find(current_admin_usuario.admin_cliente_id).empresa %>
        <% end %>
        <div class="btn-group language-menu">
        <!--language menu-->
        <a href="#" class="btn btn-link dropdown-toggle" data-toggle="dropdown">
          <span class="glyphicon glyphicon-user"><%= empresa %></span>
        </a>
        <ul class="dropdown-menu dropdown-menu-mini dropdown-menu-primary">
          <li>
            <a href="<%= destroy_admin_usuario_session_path %>" class="lang-pt" data-method="delete"><span class="glyphicon glyphicon-remove"></span> Sair</a>
          </li>
        </ul>
      </div>
      <% end %>

    </div>
  </div>
</div>
</div>
