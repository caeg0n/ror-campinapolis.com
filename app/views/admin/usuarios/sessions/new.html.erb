<div id="content">
    <div class="container">
      <!-- Login form -->
<%= simple_form_for(resource, as: resource_name, url: "/admin/entrar",html: { class: "form-login form-wrapper form-narrow"}) do |f| %>
<h3 class="title-divider">
    <span>Painel de Controle</span>
  </h3>
<% if flash[:notice].present? %>
  <div class="alert alert-info">
    <span class="glyphicon glyphicon-info-sign"></span>
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:alert].present? %>
  <div class="alert alert-danger">
    <span class="glyphicon glyphicon-exclamation-sign"></span>
    <%= flash[:alert] %>
  </div>
<% end %>
  <div class="form-group">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false,hint:false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-group">
      <button type="submit" class="btn btn-primary" value="Submit">Entrar</button>
  </div>
<% end %>
</div>
</div>
</br>