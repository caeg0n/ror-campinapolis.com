<% recursos.each do |recurso| %>
  <div class="feature col-sm-6 col-md-3">
    <img src="<%= recurso.img %>" alt="" class="img-responsive" />
    <h3 class="title">
      <a href="<%= recursos_path %>/<%= recurso.id %>"><%= recurso.titulo.titleize %></span></a>
    </h3>
    <p><%= recurso.desc.titleize %></p>
  </div>
<% end %>
