<%
thumb = SiteThumbnail.where(site_id:@cliente.id).last
if !thumb.blank?
  #a = '<img class="js-image-replace" alt="campinapolis.com" src='.html_safe
  a = cl_image_tag(thumb.image.key, quality: "auto",fetchFormat: "auto", crop: "scale")
